<Application x:Class="Win90s.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Win90s">

    <Application.Resources>

        <Style x:Key="90Window" TargetType="Window">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="local:WindowAppHelper.UseNoRoundCorners" Value="True"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border BorderBrush="Black" BorderThickness="2">
                            <Border BorderBrush="LightGray" BorderThickness="4">
                                <Border BorderBrush="Black" BorderThickness="2">
                                    <DockPanel LastChildFill="True">

                                        <!-- Title bar -->
                                        <Border x:Name="PART_TitleBar" 
                                                Background="Navy" 
                                                Height="24" DockPanel.Dock="Top">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{TemplateBinding Title}" 
                                                           Grid.Column="1"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,0"/>
                                                <Button x:Name="PART_CloseButton" 
                                                        Grid.Column="2"
                                                        Content="X" 
                                                        Width="24" Height="24" 
                                                        Background="LightGray" 
                                                        BorderBrush="Black"
                                                        Margin="0,-2,-2,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Command="{x:Static ApplicationCommands.Close}"/>

                                            </Grid>
                                        </Border>

                                        <!-- Window content -->
                                        <AdornerDecorator>
                                            <ContentPresenter/>
                                        </AdornerDecorator>

                                    </DockPanel>
                                </Border>
                            </Border>
                        </Border>

                        <!-- Hook up behaviors -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsActive" Value="True">
                                                            
                                    <Setter TargetName="PART_TitleBar" Property="Tag">
                                        <Setter.Value>
                                            <MultiBinding Converter="{x:Static local:AttachDragBehavior.Instance}">
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}"/>
                                                <Binding ElementName="PART_TitleBar"/>
                                            </MultiBinding>
                                        </Setter.Value>
                                    </Setter>
                                
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style  TargetType="Control">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="{x:Static SystemColors.ControlBrush}" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="{x:Static SystemColors.ControlBrush}" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <BitmapImage x:Key="CloseIcon" UriSource="pack://application:,,,/Icons/Cross.png"/>
        <BitmapImage x:Key="MinimizeIcon" UriSource="pack://application:,,,/Icons/underbar.png"/>
        <BitmapImage x:Key="MaximizeIcon" UriSource="pack://application:,,,/Icons/arrowUp.png"/>
        <BitmapImage x:Key="Windowed" UriSource="pack://application:,,,/Icons/arrowdown.png"/>
    </Application.Resources>
</Application>
